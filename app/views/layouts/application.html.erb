<!DOCTYPE html>
<html>
	<head>
		<title>OctomobiRails</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="wrapper">
			<% if controller_name == "home_page" && action_name == "index" %>
				<%= render :partial => 'shared/home_header' %>
			<% else %>
				<%= render :partial => 'shared/header' %>
			<% end %>
			<!-- Empty Div for Modal Masking | Under Header to Give Links Back -->
			<div class="mask"></div>
			
			<div class="content">

			<%= yield %>

			</div>

			<div class="footer_buffer">&nbsp;</div>

			<%= render :partial => 'shared/footer' %>
		</div>
	</body>
</html>
